{% extends 'base.html.twig' %}



{% block content %}

<div class="row">
     {% for article in articles %}
        <div class="col-md-6 mt-3">
                <div class="card" style="">
                    <h5 class="card-title">{{article.nom}}</h5>
                    <a href="{{ path('article_details',{'slug':article.slug })}}"><img src="/uploads/images/miniatures/{{article.miniature}}" class="card-img-top" height="200px" alt="image article"></a>
                    <div class="card-body">
                        <p class="card-text">{{article.description}}</p>
                    </div>
            </div> 
        </div>

        {% endfor %}

        
{# {{ dump(articles) }} #}
        
</div>


{% endblock %}
